<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Project List</title>
  </head>
  <body>
    <table border="1">
      <tr>
        <th>ID</th>
        <th>nama project</th>
        <th>status</th>
      </tr>
      <% data.forEach(d=>{ %>
        <tr>
          <td>
            <%= d.id %>
          </td>
        </tr>
        <tr>
          <td>
            <%= d.nama %>
          </td>
          <tr>
            <td>
              <%= d.status %>
            </td>
            <td><a href="/project/update/<%= d.id%>"><button type="button" name="button">Edit</button></a>
              <td><a href="/project/delete/<%= d.id%>"><button type="button" name="button">delete</button></a>
          </tr>
        </tr>
        <% }) %>
    </table>
    <br>
    <br>
    <form action="/project" method="post">
      <table><b>nama<b></table>
        <input type="text" name="nama" placeholder="input your project name">
        <br>
        <table><b>status<b></table>
        <input type="text" name="status" placeholder="input your project status">
        <button type="button" name="button">submit</button>
    </form>
  </body>
</html>
